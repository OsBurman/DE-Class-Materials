type Author {
  id: ID!
  name: String!
  nationality: String
}

type Book {
  id: ID!
  title: String!
  genre: String!
  year: Int!
  available: Boolean!
  rating: Float
  author: Author!
}

type Query {
  books: [Book!]!
  book(id: ID!): Book
  booksByGenre(genre: String!): [Book!]!
}

type Mutation {
  addBook(title: String!, genre: String!, year: Int!, authorId: ID!): Book!
  setAvailability(id: ID!, available: Boolean!): Book
}

type Subscription {
  bookAdded: Book!
}
